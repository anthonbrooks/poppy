    <body>
      <h1>Write a Review</h1>
      <form method='POST' action='/reviews'>
	<label for='title'><h4>Title: </h4></label>
	<input type='text' id='title' name='title'/>
	<br/>
	<label for='director'><h4>Director: </h4></label>
	<input type='text' id='director' name='director'/>
	<br/>
	<label for='fav_character'><h4>Favorite Character: </h4></label>
	<input type='text' id='fav_character' name='fav_character'/>
	<br/>
	<label for='description'><h4>Description: </h4></label>
	<textarea rows='5' columns='50' id='description' name='description'></textarea>
	<br/>
	<label for='rating'><h4>Rating: </h4></label>
	<input type='text' id='rating' name='rating'/><p>/5</p>
	<input type='submit' value='Submit'/>
      </form>
      <h5 class='home-links'><a href='/reviews'>View all reviews</a></h5>
      <h5 class='home-links'><a href='/logout'>Logout</a></h5>
    </body>
</html>
