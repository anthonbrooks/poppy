<!DOCTYPE html>
<html>
  <body>
    <form method='post' action='/reviews/<%= @review.id %>'>
      <label for='title'>Title:</label>
      <input type='text' id='title' name='title' value='<%= @review.title %>' />
      <br/>
      <label for='director'>Director:</label>
      <input type='text' id='director' name='director' value='<%= @review.director %>' />
      <br/>
      <label for='fav_character'>Favorite Character:</label>
      <input type='text' id='fav_character' name='fav_character' value='<%= @review.fav_character %>' />
      <br/>
      <label for='description'>Plot:</label>
      <input type='text' id='description' name='description' value='<%= @review.description %>' />
      <br/>
      <label for='rating'>Rating:</label>
      <input type='text' id='rating' name='rating' value='<%= @review.rating %>' />
      <br/>
      <input type='hidden' id='hidden' name='_method' value='patch'>
      <input type='submit' value='Submit' />
    </form>
    <a href='/reviews/<%= @review.id %>/delete'>Delete</a>
    <h5 class='home-links'><a href='/reviews'>View all reviews</a></h5>
    <h5 class='home-links'><a href='/logout'>Logout</a></h5>
  </body>
</html>
